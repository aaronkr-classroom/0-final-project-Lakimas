<div class="data-form">
  <form class="form-signin" action="<%=`/walkthroughs/${walkthrough._id}/update?_method=PUT`%>" method="POST">
    <h2 class="form-signin-heading">Edit walkthrough:</h2>
    <label for="inputTitle">Title</label>
    <input type="text" name="title" id="inputTitle" class="form-control" value="<%= walkthrough.title %>" placeholder="Title" autofocus>
    <label for="inputDescription">Description</label>
    <input type="text" name="description" id="inputDescription" class="form-control" value="<%= walkthrough.description %>" placeholder="Description">
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
